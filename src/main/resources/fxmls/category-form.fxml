      styleClass="container-form"
      prefHeight="100.0" prefWidth="600.0" stylesheets="@../css/buttons.css, @../css/form.css"
    fx:controller="com.github.julionaponucena.financedesktop.modules.category.controllers.CategoryFormController">
    <Label styleClass="error-label" fx:id="errorLabel"/>
    <MFXTextField fx:id="nameInput" styleClass="big-textfield" floatingText="Nome"/>
    <HBox styleClass="form-footer">
        <MFXButton styleClass="button, add-button" text="Salvar" onAction="#save"/>
    </HBox>
